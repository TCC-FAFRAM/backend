# ========================================
# CONFIGURAÇÕES DO SERVIDOR
# ========================================
PORT=3000
NODE_ENV=development

# ========================================
# CONFIGURAÇÕES DO BANCO DE DADOS
# ========================================
# URL de conexão com o PostgreSQL
DATABASE_URL="postgresql://postgres:password@localhost:5432/platform_education"

# ========================================
# CONFIGURAÇÕES DE AUTENTICAÇÃO JWT
# ========================================
# Chave secreta para assinar tokens JWT (GERE UMA CHAVE FORTE EM PRODUÇÃO!)
JWT_SECRET="sua_chave_secreta_super_forte_aqui_2024_platform_education"

# ========================================
# CONFIGURAÇÕES DE SEGURANÇA
# ========================================
# Salt rounds para bcrypt (recomendado: 10-12)
BCRYPT_SALT_ROUNDS=10

# ========================================
# CONFIGURAÇÕES DE CORS
# ========================================
# URLs permitidas para CORS (separadas por vírgula)
CORS_ORIGIN="http://localhost:3000,http://localhost:3001,http://localhost:5173"

# ========================================
# CONFIGURAÇÕES DE LOGS
# ========================================
# Nível de log (debug, info, warn, error)
LOG_LEVEL="debug"

# ========================================
# CONFIGURAÇÕES DE TESTES
# ========================================
# URL do banco de dados para testes
TEST_DATABASE_URL="postgresql://postgres:password@localhost:5432/platform_education_test"

# ========================================
# CONFIGURAÇÕES DE UPLOAD DE ARQUIVOS
# ========================================
# Diretório para upload de arquivos
UPLOAD_DIR="./uploads"

# Tamanho máximo de upload (em bytes)
MAX_FILE_SIZE=5242880

